import java.util.Scanner;

public class CollatzSequence {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        long n = sc.nextLong();   // Read the starting number

        // Print the sequence
        while (true) {
            System.out.print(n);
            if (n == 1) break;    // Stop when we reach 1
            System.out.print(", ");

            if (n % 2 == 0) {
                n = n / 2;        // If even
            } else {
                n = 3 * n + 1;    // If odd
            }
        }
    }
}
